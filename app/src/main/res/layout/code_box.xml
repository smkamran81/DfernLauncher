<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_top_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#103042"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dip">
   
    
             <TextView 
                android:id="@+id/error"
                android:layout_width="400dip"
                android:layout_height="60dip"
                android:text=""
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ed9e9e"
                android:textSize="18sp"/>
              <TextView 
                android:id="@+id/head"
                android:layout_width="400dip"
                android:layout_height="60dip"
                android:text="------"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30sp"/>
              
              <TextView 
                android:id="@+id/msg"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:text="Bitte gib hier den Code ein, den Du per Email erhalten hast. Solltest Du Ihn nicht bekommen haben, kontaktiere bitte unseren Support oder gib die Zugangsdaten von Hand ein."
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#66808F"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center">
              <TextView 
                android:id="@+id/one"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/two"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="2"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/three"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="3"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/four"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="4"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/five"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="5"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              
              
              
              </LinearLayout>
              <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center">
              <TextView 
                android:id="@+id/six"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="6"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/seven"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="7"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/eight"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="8"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/nine"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="9"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              <TextView 
                android:id="@+id/zero"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:text="0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="36sp"/>
              
              
              
              </LinearLayout>
              <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center">
              <TextView 
                android:id="@+id/delete"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:text="Delete"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="24sp"/>
              <TextView 
                android:id="@+id/clear"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:text="Clear"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="24sp"/>
              
              <TextView 
                android:id="@+id/donee"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:text="Done"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/key_button_selector"
                android:textStyle="bold"
                android:textColor="@color/font_color"
                android:textSize="24sp"/>
              </LinearLayout>
</LinearLayout>